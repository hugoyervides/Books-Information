<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityData">
    <TextView
            android:text="ISBN"
            android:layout_width="92dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:id="@+id/textISBT"
            android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitulo"/>
    <TextView
            android:text="Fecha"
            android:layout_width="92dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:id="@+id/textFecha"
            android:textSize="24sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textISBT"/>
    <TextView
            android:text="Autor"
            android:layout_width="92dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:id="@+id/textAuthor"
            android:textSize="24sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textFecha"/>
    <TextView
            android:text="URL"
            android:layout_width="92dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:id="@+id/textURL"
            android:textSize="24sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textAuthor"/>
    <TextView
            android:text="Titulo"
            android:layout_width="92dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:id="@+id/textTitulo"
            android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
    />
    <EditText
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputTitulo"
            app:layout_constraintStart_toEndOf="@+id/textTitulo" android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputISBT"
            app:layout_constraintStart_toEndOf="@+id/textTitulo" android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/inputTitulo"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputFecha"
            app:layout_constraintStart_toEndOf="@+id/textTitulo" android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/inputISBT"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputAuthor"
            app:layout_constraintStart_toEndOf="@+id/textTitulo" android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/inputISBT"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputURL"
            app:layout_constraintStart_toEndOf="@+id/textTitulo" android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/inputAuthor"/>
    <Button
            android:text="Agregar Libro"
            android:layout_width="366dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/botonAgregarLibro"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.285"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/inputURL"/>
    <Button
            android:text="Usar Codigo QR"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/botonCodigoQR"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.285" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/botonAgregarLibro" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.013"/>
</android.support.constraint.ConstraintLayout>