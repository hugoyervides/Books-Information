<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="109dp"
            android:layout_height="95dp" app:srcCompat="@mipmap/ic_launcher_round" android:id="@+id/imagenLibro"
            android:layout_weight="1" android:layout_alignParentStart="true" android:layout_marginStart="9dp"
            android:layout_alignParentTop="true" android:layout_marginTop="9dp"/>
    <TextView
            android:text="Titulo Libro"
            android:layout_width="263dp"
            android:layout_height="31dp" android:id="@+id/bookTitle" android:layout_weight="1"
            android:layout_toEndOf="@+id/imagenLibro" android:layout_alignParentTop="true"
            android:layout_marginTop="11dp" android:layout_marginStart="14dp" android:textSize="24sp"/>
    <TextView
            android:text="ISBT"
            android:layout_width="262dp"
            android:layout_height="wrap_content" android:id="@+id/isbtText" android:layout_weight="1"
            android:layout_toEndOf="@+id/imagenLibro"
            android:layout_marginStart="13dp" android:layout_marginTop="11dp" android:layout_below="@+id/bookTitle"/>
    <TextView
            android:text="Fecha"
            android:layout_width="262dp"
            android:layout_height="wrap_content" android:id="@+id/fechaText" android:layout_weight="1"
            android:layout_toEndOf="@+id/imagenLibro"
            android:layout_marginStart="13dp" android:layout_marginTop="13dp" android:layout_below="@+id/isbtText"/>
</RelativeLayout>
